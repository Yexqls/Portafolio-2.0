---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "../styles/global.css";
const { title = "Portafolio Yucli Emmanuel" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary-950 font-montserrat text-white ">
	<header></header>
  
	<!-- Fondo decorativo -->
	<div class="fixed inset-0 overflow-hidden z-0 pointer-events-none">
	  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-1/2 h-[150px] bg-secondary-200/8 rounded-full blur-3xl"></div>
	  <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.01)_1px,transparent_1px),linear-gradient(to_right,rgba(255,255,255,0.01)_1px,transparent_1px)] bg-[size:4rem_4rem]"></div>
	</div>
  
	<!-- Contenido principal -->
	<main class="space-y-16 sm:space-y-20 md:space-y-24 lg:space-y-32 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<slot />
	</main>
  </body>
  
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
