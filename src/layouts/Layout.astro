---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "../styles/global.css";
const { title = "Portafolio Yucli Emmanuel" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary-950 font-montserrat text-white ">
	<header></header>
  
	<!-- Fondo decorativo -->

  
	<!-- Contenido principal -->
	<main class="space-y-16 sm:space-y-20 md:space-y-24 lg:space-y-32 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<slot />
	</main>
  </body>
  
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
